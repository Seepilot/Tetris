#############################################################################################################
######### Build configuration file
#############################################################################################################
######### Project infos
#############################################################################################################

PROJECT := tetris
OUTPUT_DIR := output

#############################################################################################################
######### Compiler tools
#############################################################################################################

CC := gcc
CXX := g++

#############################################################################################################
######### Compiler options
#############################################################################################################

DBG_LVL := -g3
#Debug level
#Minimial   -g1
#Default    -g
#Maximum    -g3

OPTIMIZE := -O0
#Optimize 
#None       -O0
#Optimized  -O1
#More       -O2
#Most       -O3
#Debugging  -Og
#For speed  -OFast

CFLAGS :=

CXXFLAGS := -std=c++17 \
            $(DBG_LVL) \
            $(OPTIMIZE) \
            -fdiagnostics-color=always \
            -Wall \
            -Wunused \
            -Wextra
            

#############################################################################################################
######### Preprocessor Defines
#############################################################################################################

DEFINES :=
DEFINES := $(addprefix -D,$(DEFINES))

CXXFLAGS += $(DEFINES)

###################################################################################################
######### Include directories
###################################################################################################

INC_DIRS := .

INC_DIRS := $(addprefix -I,$(INC_DIRS))

CXXFLAGS += $(INC_DIRS)

###################################################################################################
######### Links to shared library or shared object
###################################################################################################

LIBS += -lncurses

###################################################################################################
######### Inlcude all Sourcelists.mk
###################################################################################################

SRCS :=
-include Sourcelist.mk